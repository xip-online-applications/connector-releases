{
  "name": "connector-runner-mail-source",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/connector-runner-mail-source/src",
  "projectType": "library",
  "tags": [
    "connector:runner",
    "connector:mail",
    "connector:source",
    "provider:@transai"
  ],
  "targets": {
    "build": {
      "executor": "@transai/tools:connector",
      "outputs": ["{options.outputPath}"],
      "options": {
        "external": ["cpu-features", "ssh2"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/connector-runner-mail-source/jest.config.ts"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "postTargets": ["build", "deploy"]
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "dependsOn": ["build"],
      "options": {
        "distFolderPath": "dist/connectors/connector-runner-mail-source"
      }
    }
  }
}
